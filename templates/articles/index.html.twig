                    <img class="article-image" src="{{ asset('upload_directory/' ~ article.illustration)}}" alt={{article.illustration}}></a>
                {% endif %}
                <p>{{ article.title }}</p>
                </div>
            </div>
        {% endfor %}
    </section>

